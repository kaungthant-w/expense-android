        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Additional widget styles -->
    <style name="Widget.Poppins.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
    </style>    <!-- Theme-aware Spinner Style -->
    <style name="ThemeAwareSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">?attr/textPrimaryColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:popupBackground">?attr/cardBackgroundColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.Poppins.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Widget.Poppins.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Widget.Poppins.TextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <!-- SpinnerDarkText style to force dark text color for spinner popup and selected item -->
    <style name="SpinnerDarkText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <!-- Custom Dialog Theme -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
