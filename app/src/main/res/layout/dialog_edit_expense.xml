<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp" android:background="?attr/cardBackgroundColor">
    <EditText android:id="@+id/editDialogName" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="💼 Expense Name" android:layout_marginBottom="16dp" android:background="@drawable/glassmorphism_input" android:padding="16dp" android:textColor="?attr/textPrimaryColor" android:textColorHint="?attr/textSecondaryColor" android:textSize="16sp" />
    <EditText android:id="@+id/editDialogPrice" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="💵 Price (e.g., 12.50)" android:inputType="numberDecimal" android:layout_marginBottom="16dp" android:background="@drawable/glassmorphism_input" android:padding="16dp" android:textColor="?attr/textPrimaryColor" android:textColorHint="?attr/textSecondaryColor" android:textSize="16sp" android:maxLength="12" android:digits="0123456789." />
    <EditText android:id="@+id/editDialogDescription" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="📝 Description" android:layout_marginBottom="16dp" android:background="@drawable/glassmorphism_input" android:padding="16dp" android:textColor="?attr/textPrimaryColor" android:textColorHint="?attr/textSecondaryColor" android:textSize="16sp" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

        <EditText android:id="@+id/editDialogDate" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="📅 Date" android:focusable="false" android:clickable="true" android:layout_marginEnd="8dp" android:background="@drawable/glassmorphism_input" android:padding="16dp" android:textColor="?attr/textPrimaryColor" android:textColorHint="?attr/textSecondaryColor" android:textSize="16sp" />
        <EditText android:id="@+id/editDialogTime" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="🕐 Time" android:focusable="false" android:clickable="true" android:layout_marginStart="8dp" android:background="@drawable/glassmorphism_input" android:padding="16dp" android:textColor="?attr/textPrimaryColor" android:textColorHint="?attr/textSecondaryColor" android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
