<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Summary Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="200dp"
        android:src="@android:drawable/ic_menu_info_details"
        app:backgroundTint="#4CAF50"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/glassmorphism_card"
        android:padding="8dp"
        android:text="📊 Summary"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fabSummary"
        app:layout_constraintEnd_toStartOf="@id/fabSummary"
        app:layout_constraintTop_toTopOf="@id/fabSummary" />

    <!-- Analytics Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAnalytics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="150dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        app:backgroundTint="#FF9800"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/glassmorphism_card"
        android:padding="8dp"
        android:text="📈 Analytics"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fabAnalytics"
        app:layout_constraintEnd_toStartOf="@id/fabAnalytics"
        app:layout_constraintTop_toTopOf="@id/fabAnalytics" />

    <!-- History Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:src="@android:drawable/ic_menu_recent_history"
        app:backgroundTint="#9C27B0"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/glassmorphism_card"
        android:padding="8dp"
        android:text="🗃️ History"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fabHistory"
        app:layout_constraintEnd_toStartOf="@id/fabHistory"
        app:layout_constraintTop_toTopOf="@id/fabHistory" />    <!-- Settings Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="300dp"
        android:src="@android:drawable/ic_menu_preferences"
        app:backgroundTint="#673AB7"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/glassmorphism_card"
        android:padding="8dp"
        android:text="⚙️ Settings"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fabSettings"
        app:layout_constraintEnd_toStartOf="@id/fabSettings"
        app:layout_constraintTop_toTopOf="@id/fabSettings" />    <!-- Currency Exchange Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="275dp"
        android:src="@android:drawable/ic_menu_manage"
        app:backgroundTint="#FF5722"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/glassmorphism_card"
        android:padding="8dp"
        android:text="💱 Currency"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fabCurrency"
        app:layout_constraintEnd_toStartOf="@id/fabCurrency"
        app:layout_constraintTop_toTopOf="@id/fabCurrency" />

    <!-- All List Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAllList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="225dp"
        android:src="@android:drawable/ic_menu_agenda"
        app:backgroundTint="#2196F3"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/glassmorphism_card"
        android:padding="8dp"
        android:text="📋 All List"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fabAllList"
        app:layout_constraintEnd_toStartOf="@id/fabAllList"
        app:layout_constraintTop_toTopOf="@id/fabAllList" />

</androidx.constraintlayout.widget.ConstraintLayout>
