<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="?attr/backgroundColor">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
            <TextView android:id="@+id/textThemeTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="🎨 Choose Your Theme" android:textSize="28sp" android:textStyle="bold" android:gravity="center" android:layout_marginBottom="30dp" android:textColor="?attr/textPrimaryColor" android:shadowColor="#40000000" android:shadowDx="2" android:shadowDy="2" android:shadowRadius="4" />

            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="20dp" app:cardElevation="0dp" android:layout_marginBottom="20dp" android:background="?attr/cardBackgroundColor">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="24dp" android:background="?attr/cardBackgroundColor">
                    <TextView android:id="@+id/textThemeDescription" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Select your preferred theme for the app" android:textSize="16sp" android:textColor="?attr/textSecondaryColor" android:layout_marginBottom="24dp" android:gravity="center" />
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="16dp">

                        <!-- Light Theme Option -->
                        <androidx.cardview.widget.CardView android:id="@+id/cardLightTheme" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="12dp" app:cardElevation="2dp" android:layout_marginBottom="12dp" android:foreground="?android:attr/selectableItemBackground" android:clickable="true" android:focusable="true" android:background="?attr/cardBackgroundColor">

                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:background="?attr/cardBackgroundColor">

                                <RadioButton android:id="@+id/radioButtonLight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:clickable="false" android:focusable="false" />

                                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                                    <TextView android:id="@+id/textLightThemeTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="☀️ Light Theme" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" android:layout_marginBottom="4dp" />

                                    <TextView android:id="@+id/textLightThemeDescription" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Clean and bright interface" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                                </LinearLayout>

                                <View android:layout_width="40dp" android:layout_height="40dp" android:background="@drawable/theme_preview_light" android:layout_gravity="center_vertical" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Dark Theme Option -->
                        <androidx.cardview.widget.CardView android:id="@+id/cardDarkTheme" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="12dp" app:cardElevation="2dp" android:layout_marginBottom="12dp" android:foreground="?android:attr/selectableItemBackground" android:clickable="true" android:focusable="true" android:background="?attr/cardBackgroundColor">

                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:background="?attr/cardBackgroundColor">

                                <RadioButton android:id="@+id/radioButtonDark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:clickable="false" android:focusable="false" />

                                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                                    <TextView android:id="@+id/textDarkThemeTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="🌙 Dark Theme" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" android:layout_marginBottom="4dp" />

                                    <TextView android:id="@+id/textDarkThemeDescription" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Easy on the eyes in low light" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                                </LinearLayout>

                                <View android:layout_width="40dp" android:layout_height="40dp" android:background="@drawable/theme_preview_dark" android:layout_gravity="center_vertical" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- System Theme Option -->
                        <androidx.cardview.widget.CardView android:id="@+id/cardSystemTheme" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="12dp" app:cardElevation="2dp" android:foreground="?android:attr/selectableItemBackground" android:clickable="true" android:focusable="true" android:background="?attr/cardBackgroundColor">

                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:background="?attr/cardBackgroundColor">

                                <RadioButton android:id="@+id/radioButtonSystem" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:clickable="false" android:focusable="false" />

                                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                                    <TextView android:id="@+id/textSystemThemeTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="🔄 System Default" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" android:layout_marginBottom="4dp" />

                                    <TextView android:id="@+id/textSystemThemeDescription" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Follow system theme settings" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                                </LinearLayout>

                                <View android:layout_width="40dp" android:layout_height="40dp" android:background="@drawable/theme_preview_system" android:layout_gravity="center_vertical" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Info Card -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="20dp" app:cardElevation="0dp" android:background="?attr/cardBackgroundColor">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp" android:background="?attr/cardBackgroundColor" android:gravity="center">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="💡 Theme changes apply immediately" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
