<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header with Back Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp">

                    <ImageButton
                        android:id="@+id/buttonBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="Back"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📤 Export Data"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor"
                        android:gravity="center"
                        android:layout_gravity="center_vertical" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </LinearLayout>

                <!-- Export Description -->
                <TextView
                    android:id="@+id/textViewDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export your expense data to Excel or print wirelessly"
                    android:textSize="16sp"
                    android:textColor="?attr/textSecondaryColor"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Custom App Title Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/textViewCustomTitleLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📋 Custom App Title"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextCustomTitle"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="Enter title for Excel export"
                            android:text="HSU Expense Report"
                            android:textSize="16sp"
                            android:textColor="?attr/textPrimaryColor"
                            android:textColorHint="?attr/textSecondaryColor"
                            android:background="@drawable/edit_text_background"
                            android:padding="12dp"
                            android:inputType="text" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Export Period Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/textViewPeriodLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📅 Export Period"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:layout_marginBottom="12dp" />

                        <Spinner
                            android:id="@+id/spinnerExportPeriod"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/spinner_background"
                            android:padding="12dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>                <!-- Paper Size Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/textViewPaperSizeLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📄 Paper Size"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:layout_marginBottom="12dp" />

                        <Spinner
                            android:id="@+id/spinnerPaperSize"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/spinner_background"
                            android:padding="12dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Export Options Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/textViewOptionsLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📤 Export Options"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:layout_marginBottom="16dp" />

                        <!-- Excel Export Button -->
                        <Button
                            android:id="@+id/buttonSaveAsExcel"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="📊 Save as Excel File"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@drawable/button_primary_background"
                            android:layout_marginBottom="12dp"
                            android:elevation="2dp" />

                        <!-- Print Wirelessly Button -->
                        <Button
                            android:id="@+id/buttonPrintWirelessly"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="🖨️ Print Wirelessly"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@drawable/button_secondary_background"
                            android:elevation="2dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Device Discovery Section (Initially Hidden) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDeviceDiscovery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/textViewDeviceDiscoveryLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🔍 Device Discovery"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/textViewDeviceStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Searching for devices..."
                            android:textSize="14sp"
                            android:textColor="?attr/textSecondaryColor"
                            android:layout_marginBottom="12dp" />

                        <ProgressBar
                            android:id="@+id/progressBarDeviceSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:indeterminate="true"
                            android:layout_marginBottom="12dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewDevices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
