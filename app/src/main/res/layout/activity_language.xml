<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌐 Language Settings"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:textColor="?attr/textPrimaryColor"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <!-- Language Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Language"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tvLanguageDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose your preferred language for the app interface"
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor"
                        android:layout_marginBottom="24dp" />

                    <RadioGroup
                        android:id="@+id/radioGroupLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioEnglish"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🇺🇸 English"
                            android:textSize="18sp"
                            android:textColor="?attr/textPrimaryColor"
                            android:padding="12dp"
                            android:layout_marginBottom="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:buttonTint="?attr/colorPrimary" />

                        <RadioButton
                            android:id="@+id/radioMyanmar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🇲🇲 မြန်မာ"
                            android:textSize="18sp"
                            android:textColor="?attr/textPrimaryColor"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackground"
                            android:buttonTint="?attr/colorPrimary" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Information Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ℹ️ Note"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvLanguageNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The app will restart to apply the new language settings. All your data will be preserved."
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
