<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/card_background"
                android:src="@drawable/ic_arrow_back"
                android:layout_marginEnd="16dp"
                android:contentDescription="Back" />            <TextView
                android:id="@+id/textSettingsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="?attr/textPrimaryColor" />

        </LinearLayout>        <!-- Language Settings Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLanguageSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="?attr/cardBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">                    <TextView
                        android:id="@+id/textLanguageTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language_settings"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor"
                        android:layout_marginBottom="8dp" />                    <TextView
                        android:id="@+id/textLanguageDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language_description"
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textSize="24sp"
                    android:textColor="?attr/textSecondaryColor"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Theme Settings Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardThemeSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="?attr/cardBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">                    <TextView
                        android:id="@+id/textThemeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_settings"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor"
                        android:layout_marginBottom="8dp" />                    <TextView
                        android:id="@+id/textThemeDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_settings_desc"
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textSize="24sp"
                    android:textColor="?attr/textSecondaryColor"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>        </androidx.cardview.widget.CardView>

        <!-- Data Export Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardExportData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="?attr/cardBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">                    <TextView
                        android:id="@+id/textExportTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/export_data"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor"
                        android:layout_marginBottom="8dp" />                    <TextView
                        android:id="@+id/textExportDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/export_data_desc"
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textSize="24sp"
                    android:textColor="?attr/textSecondaryColor"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Data Import Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImportData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="?attr/cardBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">                    <TextView
                        android:id="@+id/textImportTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/import_data"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor"
                        android:layout_marginBottom="8dp" />                    <TextView
                        android:id="@+id/textImportDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/import_data_desc"
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textSize="24sp"
                    android:textColor="?attr/textSecondaryColor"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- About Section -->
        <!-- <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="?attr/cardBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ About"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HsuPar Expense App"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 1.0.0"
                    android:textSize="14sp"
                    android:textColor="?attr/textSecondaryColor"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track your expenses efficiently with a beautiful and intuitive interface"
                    android:textSize="14sp"
                    android:textColor="?attr/textSecondaryColor" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>     -->
        </LinearLayout>    
        </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

<!-- Navigation Drawer -->
<com.google.android.material.navigation.NavigationView
    android:id="@+id/navigationView"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
