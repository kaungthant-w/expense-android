<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/drawerLayout" android:layout_width="match_parent" android:layout_height="match_parent" android:fitsSystemWindows="true">
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/glassmorphism_background">
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <!-- Header with Back Button -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="30dp">
                    <ImageButton android:id="@+id/buttonBack" android:layout_width="48dp" android:layout_height="48dp" android:background="@drawable/card_background" android:src="@drawable/ic_arrow_back" android:layout_marginEnd="16dp" android:contentDescription="Back" />
                    <TextView android:id="@+id/textViewHeaderTitle" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ℹ️ About Us" android:textSize="18sp" android:textStyle="bold" android:gravity="center_vertical" android:textColor="@android:color/white" />
                </LinearLayout>
                <!-- About Section -->
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="16dp" app:cardElevation="8dp" android:layout_marginBottom="16dp" app:cardBackgroundColor="?attr/cardBackgroundColor">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
                        <TextView android:id="@+id/textViewAboutSectionTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ℹ️ About" android:textSize="20sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" android:layout_marginBottom="12dp" />
                        <TextView android:id="@+id/textViewAppName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="HSU Expense App" android:textSize="16sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" android:layout_marginBottom="4dp" />
                        <TextView android:id="@+id/textViewAppVersion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Version 1.0.0" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" android:layout_marginBottom="8dp" />
                        <TextView android:id="@+id/textViewAppDescription" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Track your expenses efficiently with a beautiful and intuitive interface" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- Developer and Support Footer -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="16dp" android:weightSum="2" android:gravity="start">
                    <!-- Developer Footer -->
                    <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:cardCornerRadius="20dp" app:cardElevation="0dp" android:layout_marginEnd="8dp" android:background="@drawable/glassmorphism_card">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="13dp" android:background="@drawable/glassmorphism_card" android:gravity="center">
                            <TextView android:id="@+id/textViewDevelopedBy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="👨‍💻 Developed by" android:textSize="12sp" android:textColor="#1A1A1A" android:layout_marginBottom="4dp" />
                            <TextView android:id="@+id/textViewDeveloperName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Kyaw Myo Thant" android:textSize="14sp" android:textStyle="bold" android:textColor="#1A1A1A" android:layout_marginBottom="2dp" />
                            <TextView android:id="@+id/textViewDeveloperEmail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="📧 kyawmyothant.dev@gmail.com" android:textSize="10sp" android:textColor="#666666" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- Supported Footer -->
                    <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:cardCornerRadius="20dp" app:cardElevation="0dp" android:layout_marginStart="8dp" android:background="@drawable/glassmorphism_card">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="13dp" android:background="@drawable/glassmorphism_card" android:gravity="center">
                            <TextView android:id="@+id/textViewSupportedBy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Supported by" android:textSize="12sp" android:textColor="#1A1A1A" android:layout_marginBottom="4dp" />
                            <TextView android:id="@+id/textViewSupporterName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="HSU Yee Mon" android:textSize="14sp" android:textStyle="bold" android:textColor="#1A1A1A" android:layout_marginBottom="2dp" />
                            <TextView android:id="@+id/textViewSupporterMessage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="She helped with testing, feedback, and design. Her support made it possible." android:textSize="10sp" android:textColor="#666666" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView android:id="@+id/navigationView" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_gravity="start" android:fitsSystemWindows="true" app:headerLayout="@layout/nav_header" app:menu="@menu/navigation_menu" />
</androidx.drawerlayout.widget.DrawerLayout>