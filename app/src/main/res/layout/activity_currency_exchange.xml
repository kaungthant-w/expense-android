                <!-- Third Row: MYR, EUR, KRW -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">

                    <androidx.cardview.widget.CardView android:id="@+id/cardMyr" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" app:cardCornerRadius="10dp" app:cardElevation="4dp" android:layout_marginEnd="4dp" android:clickable="true" android:focusable="true" android:foreground="?attr/selectableItemBackground">

