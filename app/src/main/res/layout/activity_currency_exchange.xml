<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header with Back Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <ImageButton
                    android:id="@+id/buttonBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/card_background"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Back" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="💱 Currency Exchange &amp; Rate Viewer"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="?attr/textPrimaryColor" />

            </LinearLayout>

            <!-- Currency Exchange Table Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="🌍 Live Exchange Rates"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonRefreshRates"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="🔄 Refresh"
                            android:textSize="12sp"
                            app:backgroundTint="?attr/accentColor"
                            android:textColor="@android:color/white"
                            android:minWidth="0dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />

                    </LinearLayout>

                    <!-- Exchange Rates Table -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="?attr/colorSurface"
                        android:padding="12dp">

                        <!-- Table Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp"
                            android:background="?attr/accentColor">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Currency"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:paddingStart="12dp"
                                android:gravity="start" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Rate (MMK)"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:paddingEnd="12dp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- Currency Rows -->
                        <!-- USD Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp"
                            android:background="?attr/cardBackgroundColor">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="💵 USD (US Dollar)"
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingStart="12dp" />

                            <TextView
                                android:id="@+id/textRateUsd"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Loading..."
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingEnd="12dp"
                                android:gravity="end"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- EUR Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp"
                            android:background="?attr/colorSurface">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="💶 EUR (Euro)"
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingStart="12dp" />

                            <TextView
                                android:id="@+id/textRateEur"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Loading..."
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingEnd="12dp"
                                android:gravity="end"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- SGD Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp"
                            android:background="?attr/cardBackgroundColor">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="🇸🇬 SGD (Singapore Dollar)"
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingStart="12dp" />

                            <TextView
                                android:id="@+id/textRateSgd"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Loading..."
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingEnd="12dp"
                                android:gravity="end"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- MYR Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp"
                            android:background="?attr/colorSurface">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="🇲🇾 MYR (Malaysian Ringgit)"
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingStart="12dp" />

                            <TextView
                                android:id="@+id/textRateMyr"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Loading..."
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingEnd="12dp"
                                android:gravity="end"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- CNY Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp"
                            android:background="?attr/cardBackgroundColor">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="🇨🇳 CNY (Chinese Yuan)"
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingStart="12dp" />

                            <TextView
                                android:id="@+id/textRateCny"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Loading..."
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingEnd="12dp"
                                android:gravity="end"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- THB Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp"
                            android:background="?attr/colorSurface">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="🇹🇭 THB (Thai Baht)"
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingStart="12dp" />

                            <TextView
                                android:id="@+id/textRateThb"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Loading..."
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingEnd="12dp"
                                android:gravity="end"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- JPY Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp"
                            android:background="?attr/cardBackgroundColor">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="🇯🇵 JPY (Japanese Yen)"
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingStart="12dp" />

                            <TextView
                                android:id="@+id/textRateJpy"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Loading..."
                                android:textSize="14sp"
                                android:textColor="?attr/textPrimaryColor"
                                android:paddingEnd="12dp"
                                android:gravity="end"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Last Updated Info -->
                    <TextView
                        android:id="@+id/textLastUpdated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📅 Last updated: --"
                        android:textSize="12sp"
                        android:textColor="?attr/textSecondaryColor"
                        android:layout_marginTop="12dp"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Current Exchange Rate Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📊 Current Exchange Rate"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/textCurrentRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Exchange Rate: 1 USD = 3600.00 MMK"
                        android:textSize="16sp"
                        android:textColor="?attr/textPrimaryColor"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonFetchRate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="🔄 Fetch Latest Rate"
                            android:textSize="14sp"
                            app:backgroundTint="?attr/accentColor"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonCustomRate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="✏️ Custom Rate"
                            android:textSize="14sp"
                            app:backgroundTint="?attr/colorSecondary"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Custom Rate Input Section (Initially Hidden) -->
                    <LinearLayout
                        android:id="@+id/layoutCustomRateInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:background="?attr/colorSurface"
                        android:padding="12dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="💡 Manual Exchange Rate Entry"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter rate (e.g., 3600.0)"
                            app:boxStrokeColor="?attr/accentColor"
                            app:hintTextColor="?attr/textSecondaryColor"
                            android:layout_marginBottom="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextCustomRate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textColor="?attr/textPrimaryColor"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonApplyCustomRate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="✅ Apply Rate"
                                android:textSize="14sp"
                                app:backgroundTint="?attr/colorPrimary"
                                android:textColor="@android:color/white"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonCancelCustomRate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="❌ Cancel"
                                android:textSize="14sp"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                app:strokeColor="?attr/textSecondaryColor"
                                android:textColor="?attr/textSecondaryColor"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Currency Selection Cards -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌍 Select Display Currency"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/textPrimaryColor"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardUsd"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💵 USD"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="US Dollar"
                            android:textSize="12sp"
                            android:textColor="?attr/textSecondaryColor" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMmk"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🇲🇲 MMK"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Myanmar Kyat"
                            android:textSize="12sp"
                            android:textColor="?attr/textSecondaryColor" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>            </LinearLayout>

            <!-- Quick Switch Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSwitchCurrency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💱 Switch to MMK"
                android:textSize="16sp"
                app:backgroundTint="?attr/accentColor"
                android:textColor="@android:color/white"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

<!-- Navigation Drawer -->
<com.google.android.material.navigation.NavigationView
    android:id="@+id/navigationView"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
