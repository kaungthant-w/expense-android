                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Quick Switch Button -->
                <com.google.android.material.button.MaterialButton android:id="@+id/buttonSwitchCurrency" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="ðŸ’± Switch to MMK" android:textSize="12sp" app:backgroundTint="?attr/accentColor" android:textColor="@android:color/white" android:layout_marginBottom="20dp" />

                <!-- Current Exchange Rate Card -->
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="16dp" app:cardElevation="8dp" android:layout_marginBottom="16dp" app:cardBackgroundColor="?attr/cardBackgroundColor">

