                            <com.google.android.material.textfield.TextInputLayout android:id="@+id/textInputCustomRate" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter rate (e.g., 3600.0)" app:boxStrokeColor="?attr/accentColor" app:hintTextColor="?attr/textSecondaryColor" android:layout_marginBottom="12dp">

                                <com.google.android.material.textfield.TextInputEditText android:id="@+id/editTextCustomRate" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal" android:textColor="?attr/textPrimaryColor" android:maxLines="1" />

