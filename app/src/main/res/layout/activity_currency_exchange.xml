                            <!-- USD Row -->
                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="10dp" android:background="?attr/cardBackgroundColor">

                                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ðŸ’µ USD" android:textSize="10sp" android:textColor="?attr/textPrimaryColor" android:paddingStart="8dp" />

                                <TextView android:id="@+id/textRateUsd" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Loading..." android:textSize="12sp" android:textColor="?attr/textPrimaryColor" android:paddingEnd="10dp" android:gravity="end" android:textStyle="bold" />

                            </LinearLayout>

                            <!-- EUR Row -->
                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="10dp" android:background="?attr/colorSurface">

                                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ðŸ’¶ EUR" android:textSize="12sp" android:textColor="?attr/textPrimaryColor" android:paddingStart="10dp" />

