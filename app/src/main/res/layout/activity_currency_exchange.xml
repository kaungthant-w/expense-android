                            <com.google.android.material.button.MaterialButton android:id="@+id/buttonFetchRate" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ðŸ”„ Fetch Latest" android:textSize="10sp" app:backgroundTint="?attr/accentColor" android:textColor="@android:color/white" android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton android:id="@+id/buttonCustomRate" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="âœï¸ Custom Rate" android:textSize="10sp" app:backgroundTint="?attr/colorSecondary" android:textColor="@android:color/white" android:layout_marginStart="8dp" />

