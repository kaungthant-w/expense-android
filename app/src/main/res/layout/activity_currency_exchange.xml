                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ‡¸ðŸ‡¬ SGD" android:textSize="14sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" />
                            <TextView android:id="@+id/textSingaporeDollarLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Singapore Dollar" android:textSize="10sp" android:textColor="?attr/textSecondaryColor" />

