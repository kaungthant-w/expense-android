                                <TextView android:id="@+id/textCurrencyLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Currency" android:textSize="14sp" android:textStyle="bold" android:textColor="@android:color/white" android:paddingStart="10dp" android:gravity="start" />

