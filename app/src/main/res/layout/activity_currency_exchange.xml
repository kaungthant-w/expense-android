                        <!-- Custom Rate Input Section (Initially Hidden) -->
                        <LinearLayout android:id="@+id/layoutCustomRateInput" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:visibility="gone" android:background="?attr/colorSurface" android:padding="12dp" android:layout_marginTop="8dp">
