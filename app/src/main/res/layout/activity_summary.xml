<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Expense Summary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:textColor="?attr/textPrimaryColor"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Overall Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/glassmorphism_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/glassmorphism_card">                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° Overall Statistics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"                        android:text="Total Expenses:"
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor" />

                    <TextView
                        android:id="@+id/textTotalExpenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Amount:"
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor" />

                    <TextView
                        android:id="@+id/textTotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Average Amount:"
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor" />

                    <TextView
                        android:id="@+id/textAverageAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Today's Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/glassmorphism_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/glassmorphism_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… Today's Summary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Today's Expenses:"
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor" />

                    <TextView
                        android:id="@+id/textTodayExpenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Today's Total:"
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor" />

                    <TextView
                        android:id="@+id/textTodayAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- This Month's Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/glassmorphism_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/glassmorphism_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š This Month's Summary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Month's Expenses:"
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor" />

                    <TextView
                        android:id="@+id/textMonthExpenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Month's Total:"
                        android:textSize="14sp"
                        android:textColor="?attr/textSecondaryColor" />

                    <TextView
                        android:id="@+id/textMonthAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Extremes Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/glassmorphism_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/glassmorphism_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ˆ Expense Extremes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textPrimaryColor"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Highest Expense:"
                    android:textSize="14sp"
                    android:textColor="?attr/textSecondaryColor"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textHighestExpense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No expenses yet"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#F44336"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lowest Expense:"
                    android:textSize="14sp"
                    android:textColor="?attr/textSecondaryColor"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textLowestExpense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No expenses yet"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>    </LinearLayout>

</ScrollView>

<!-- Navigation Drawer Toggle Button -->
<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fabMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="16dp"
    android:src="@drawable/ic_menu"
    app:backgroundTint="?attr/accentColor"
    app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

<!-- Navigation Drawer -->
<com.google.android.material.navigation.NavigationView
    android:id="@+id/navigationView"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
