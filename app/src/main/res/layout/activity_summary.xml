<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/drawerLayout" android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="?attr/backgroundColor">

        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:background="?attr/backgroundColor">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

                <!-- Header with Back Button -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="30dp">

                    <ImageButton android:id="@+id/buttonBack" android:layout_width="48dp" android:layout_height="48dp" android:background="@drawable/card_background" android:src="@drawable/ic_arrow_back" android:layout_marginEnd="16dp" android:contentDescription="Back" />
                    <TextView android:id="@+id/textViewSummaryTitle" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/summary_expense_title" android:textSize="24sp" android:textStyle="bold" android:gravity="center_vertical" android:textColor="?attr/textPrimaryColor" />

                </LinearLayout>

                <!-- Overall Summary Card -->
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="20dp" app:cardElevation="0dp" android:layout_marginBottom="16dp" android:background="@drawable/glassmorphism_card">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp" android:background="@drawable/glassmorphism_card">
                        <TextView android:id="@+id/textViewOverallStats" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/summary_overall_statistics" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" android:layout_marginBottom="16dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                            <TextView android:id="@+id/textViewTotalExpensesLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/total_expenses" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                            <TextView android:id="@+id/textTotalExpenses" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textSize="14sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" />

                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                            <TextView android:id="@+id/textViewTotalAmountLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/total_amount" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                            <TextView android:id="@+id/textTotalAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$0.00" android:textSize="14sp" android:textStyle="bold" android:textColor="#4CAF50" />

                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <TextView android:id="@+id/textViewAverageAmountLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/average_amount" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                            <TextView android:id="@+id/textAverageAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$0.00" android:textSize="14sp" android:textStyle="bold" android:textColor="#FF9800" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Today's Summary Card -->
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="20dp" app:cardElevation="0dp" android:layout_marginBottom="16dp" android:background="@drawable/glassmorphism_card">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp" android:background="@drawable/glassmorphism_card">
                        <TextView android:id="@+id/textViewTodaysSummary" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/summary_today_summary" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" android:layout_marginBottom="16dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                            <TextView android:id="@+id/textViewTodayExpensesLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/summary_today_expenses" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                            <TextView android:id="@+id/textTodayExpenses" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textSize="14sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" />

                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <TextView android:id="@+id/textViewTodayTotalLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/summary_today_total" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                            <TextView android:id="@+id/textTodayAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$0.00" android:textSize="14sp" android:textStyle="bold" android:textColor="#4CAF50" />

                        </LinearLayout>

                    </LinearLayout>                </androidx.cardview.widget.CardView>

                <!-- This Week's Summary Card -->
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="20dp" app:cardElevation="0dp" android:layout_marginBottom="16dp" android:background="@drawable/glassmorphism_card">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp" android:background="@drawable/glassmorphism_card">
                        <TextView android:id="@+id/textViewWeeklySummary" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/analytics_weekly_analysis" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" android:layout_marginBottom="16dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                            <TextView android:id="@+id/textViewWeekExpensesLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/analytics_this_week_expenses" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                            <TextView android:id="@+id/textWeekExpenses" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textSize="14sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" />

                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                            <TextView android:id="@+id/textViewWeekTotalLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/analytics_this_week_total" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                            <TextView android:id="@+id/textWeekAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$0.00" android:textSize="14sp" android:textStyle="bold" android:textColor="#4CAF50" />

                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <TextView android:id="@+id/textViewWeekAverageLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/analytics_average_per_day" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                            <TextView android:id="@+id/textWeekAverage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$0.00" android:textSize="14sp" android:textStyle="bold" android:textColor="#FF9800" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- This Month's Summary Card -->
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="20dp" app:cardElevation="0dp" android:layout_marginBottom="16dp" android:background="@drawable/glassmorphism_card">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp" android:background="@drawable/glassmorphism_card">
                        <TextView android:id="@+id/textViewMontHSUmmary" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/summary_month_summary" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" android:layout_marginBottom="16dp" />

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                            <TextView android:id="@+id/textViewMonthExpensesLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/summary_month_expenses" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                            <TextView android:id="@+id/textMonthExpenses" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textSize="14sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" />

                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <TextView android:id="@+id/textViewMonthTotalLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/summary_month_total" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" />

                            <TextView android:id="@+id/textMonthAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$0.00" android:textSize="14sp" android:textStyle="bold" android:textColor="#4CAF50" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Extremes Card -->
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="20dp" app:cardElevation="0dp" android:layout_marginBottom="20dp" android:background="@drawable/glassmorphism_card">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp" android:background="@drawable/glassmorphism_card">
                        <TextView android:id="@+id/textViewExpenseExtremes" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/summary_expense_extremes" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/textPrimaryColor" android:layout_marginBottom="16dp" />
                        <TextView android:id="@+id/textViewHighestExpenseLabel" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/highest_expense" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" android:layout_marginBottom="4dp" />
                        <TextView android:id="@+id/textHighestExpense" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/summary_no_expenses_yet" android:textSize="14sp" android:textStyle="bold" android:textColor="#F44336" android:layout_marginBottom="12dp" />
                        <TextView android:id="@+id/textViewLowestExpenseLabel" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/lowest_expense" android:textSize="14sp" android:textColor="?attr/textSecondaryColor" android:layout_marginBottom="4dp" />
                        <TextView android:id="@+id/textLowestExpense" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/summary_no_expenses_yet" android:textSize="14sp" android:textStyle="bold" android:textColor="#4CAF50" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView android:id="@+id/navigationView" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_gravity="start" app:headerLayout="@layout/nav_header" app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
